<%- include layouts/header.ejs %>
    <div class="container">
      <div class="jumbotron mt-3">
        <h1 class="display-4"><%= title %></h1>
        <p class="lead">PÃ¡gina de venta de manuales</p>
        <hr class="my-4">
        <p>Usando Node Js y MYSQL</p>
        <p class="lead">
