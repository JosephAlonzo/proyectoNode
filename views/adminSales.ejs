<%- include layouts/headerAdmin.ejs %>
<div class="container">
    <h1><%= title %></h1>
    <div class="row">
        <div class="col-7 ml-auto">
            <form action="/admin/ventas" method="POST" class="form-inline">
                <div class="form-group">
                <label for="exampleInputEmail1" class="mr-3">Fecha Inicio: </label>
                <input type="date" class="form-control mr-2" id="exampleInputEmail1" name="date1" >
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1" class="mr-3">Fecha Final: </label>
                    <input type="date" class="form-control mr-2" id="exampleInputEmail1" name="date2" >
                </div>
                <button type="submit" class="btn btn-info">Buscar</button>
            </form>
        </div>   
    </div>
    
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Informaci√≥n <b><%= title %></b></h2>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Producto</th>
                    <th>Ventas</th>
                    <th>Precio</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0 ; i <Sales.length; i++) { %>
                    <tr>
                        <td><%= Sales[i].id%></td>
                        <td><%= Sales[i].titulo%></td>
                        <td><%= Sales[i].cantidad%></td>
                        <td><%= Sales[i].precio%></td>
                        <td><%= Sales[i].cantidad * Sales[i].precio %></td>
                    </tr>
                <%}%>
            </tbody>
        </table>
        
        </div>
    </div>
        
        


